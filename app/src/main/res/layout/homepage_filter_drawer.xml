<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Search Filter"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <GridView
        android:id="@+id/gvFilter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvSearchTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:numColumns="2"/>

    <TextView
        android:id="@+id/tvPriceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Price range"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/gvFilter"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMinMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPriceRange"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#000"
            app:boxBackgroundColor="#FFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMinimumAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:enabled="false"
                android:padding="16dp"
                android:hint="Min."
                android:textColor="@color/black"
                android:background="@drawable/rectangle_black_border"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="20dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:background="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#000"
            app:boxBackgroundColor="#FFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMaximumAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="16dp"
                android:enabled="false"
                android:hint="Max."
                android:textColor="@color/black"
                android:background="@drawable/rectangle_black_border"/>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMinMaxButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/clMinMax">

        <Button
            android:id="@+id/btn050"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#13548A"
            android:textColor="@color/white"
            android:text="1 - 50" />

        <Button
            android:id="@+id/btn51200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn050"
            app:layout_constraintEnd_toStartOf="@id/btn201500"
            android:backgroundTint="#13548A"
            android:textColor="@color/white"
            android:text="51 - 200" />

        <Button
            android:id="@+id/btn201500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#13548A"
            android:textColor="@color/white"
            android:text="201 - 500" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnCancelFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/clMinMaxButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnApplyFilter"
        android:text="Cancel"
        android:textColor="@color/white"
        android:backgroundTint="#566C7D"/>

    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/clMinMaxButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancelFilter"
        android:text="Apply"
        android:textColor="@color/black"
        android:backgroundTint="#A6DEF5"/>

</androidx.constraintlayout.widget.ConstraintLayout>