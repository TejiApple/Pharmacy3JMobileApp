<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DeliveryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6DEF5"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Orders"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:layout_margin="16dp"
        android:id="@+id/lvOrderDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/white"
        android:dividerHeight="8dp"
        android:layout_below="@id/cl"
        android:layout_above="@id/btnBack"
        app:layout_constraintBaseline_toTopOf="@id/btnBack"
        app:layout_constraintTop_toBottomOf="@id/cl" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lvOrderDelivery"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:backgroundTint="#566C7D"
        android:textColor="@color/white"
        android:text="Back"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>